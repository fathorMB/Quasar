@using System.Security.Claims
@inherits LayoutComponentBase
@inject QuasarUiNavigationStore NavigationStore
@inject Quasar.Ui.Branding.QuasarUiBrandingOptions Branding
@inject Quasar.Ui.Security.QuasarUiSecurityOptions SecurityOptions
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="quasar-shell" style="--quasar-bg:@Branding.Palette.Background; --quasar-panel:@Branding.Palette.Panel; --quasar-nav-bg:@Branding.Palette.Navigation; --quasar-border:@Branding.Palette.Border; --quasar-accent-start:@Branding.Palette.AccentGradientStart; --quasar-accent-end:@Branding.Palette.AccentGradientEnd; --quasar-primary:@Branding.Palette.PrimaryBadge; --quasar-nav-active:@Branding.Palette.NavActive;">
    <aside class="quasar-shell__sidenav">
        <div class="quasar-shell__brand">
            <div class="quasar-shell__logo">@Branding.LogoGlyph</div>
            <div class="quasar-shell__appname">@Branding.ApplicationName</div>
        </div>

        @foreach (var navSection in NavigationStore.Sections)
        {
            var sectionItems = navSection.Items.Where(IsVisible).ToList();
            if (sectionItems.Count == 0)
            {
                continue;
            }
            <div class="quasar-shell__nav">
                <h3>@navSection.Title</h3>
                @foreach (var navItem in sectionItems)
                {
                    var childItems = navItem.Children.Where(IsVisible).ToList();
                    <div class="quasar-shell__nav-item">
                        <NavLink href="@navItem.Href" Match="NavLinkMatch.All">@navItem.Label</NavLink>
                        @if (childItems.Count > 0)
                        {
                            <div class="quasar-shell__nav-children">
                                @foreach (var child in childItems)
                                {
                                    <NavLink href="@child.Href" Match="NavLinkMatch.All">@child.Label</NavLink>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }

        <footer class="quasar-shell__footer">
            <div>
                <p class="quasar-shell__eyebrow">Connected</p>
                <p class="quasar-shell__status">BEAM Server</p>
            </div>
            <div class="quasar-shell__user">
                <span>@CurrentUserLabel</span>
                <span class="quasar-shell__roles">@RoleList</span>
            </div>
        </footer>
    </aside>

    <main class="quasar-shell__content">
        <header class="quasar-shell__topbar">
            <div>
                <p class="quasar-shell__eyebrow">Quasar Microframework</p>
                <h1>Service control center</h1>
                <p>Configure domains, monitor background jobs and surface UI panels straight from your Quasar application.</p>
            </div>
            <div class="quasar-shell__topbar-actions">
                <div class="quasar-shell__topbar-brand">
                    <div class="quasar-shell__logo quasar-shell__logo--small">@Branding.LogoGlyph</div>
                    <span>@Branding.ApplicationName</span>
                </div>
                <button>Deploy</button>
                <button class="primary">Invite</button>
                <span class="quasar-shell__user-pill">@CurrentUserLabel</span>
                @if (SecurityOptions.RequireAuthentication)
                {
                    <form method="post" action="/logout">
                        <AntiforgeryToken />
                        <button type="submit" class="ghost">Sign out</button>
                    </form>
                }
            </div>
        </header>

        <div class="quasar-shell__body">
@Body
        </div>
    </main>
</div>

@code {
    private ClaimsPrincipal? _currentUser;
    private string CurrentUserLabel => _currentUser?.Identity?.IsAuthenticated == true
        ? _currentUser!.Identity!.Name ?? _currentUser.FindFirst(ClaimTypes.Email)?.Value ?? "Authenticated"
        : "Unsigned user";
    private string RoleList => _currentUser is null
        ? string.Empty
        : string.Join(", ", _currentUser.FindAll(ClaimTypes.Role).Select(r => r.Value));

    protected override void OnInitialized()
    {
        _currentUser = HttpContextAccessor.HttpContext?.User;
    }

    private bool IsVisible(Quasar.Ui.Navigation.QuasarUiNavItem item)
    {
        if (item.AllowedRoles.Count == 0)
        {
            return true;
        }

        if (_currentUser?.Identity?.IsAuthenticated != true)
        {
            return false;
        }

        return item.AllowedRoles.Any(UserHasRole);
    }

    private bool UserHasRole(string roleName) =>
        !string.IsNullOrWhiteSpace(roleName) &&
        _currentUser!.IsInRole(roleName.Trim());
}

